{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all cpp files",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "${workspaceFolder}/CXX/main.cpp",
                "${workspaceFolder}/CXX/hash_fn.cpp",
                "-o",
                "${workspaceFolder}/CXX/main.exe",
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build main.cpp and hash_fn.cpp together"
        }
    ]
}