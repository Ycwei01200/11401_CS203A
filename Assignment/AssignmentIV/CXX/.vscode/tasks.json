{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (AssignmentIV CXX)",
            "type": "cppbuild",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "main.cpp",           // 直接用相對路徑，不用 ${workspaceFolder}/CXX/
                "hash_fn.cpp",
                "-o",
                "main.exe",
                "-std=c++17",
                "-g",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}